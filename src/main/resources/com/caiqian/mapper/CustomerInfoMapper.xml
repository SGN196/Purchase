<mapper namespace="com.caiqian.mapper.CustomerInfoMapper" >
  <select id="queryByNamePwd" resultType="com.caiqian.Bean.CustomerInfo">
      select *
      from customer_info
      <where>

       customer_code=#{customerCode}

          and customer_password=#{customerPassword}

      </where>


  </select>
</mapper>

